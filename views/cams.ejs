<html>
    <head>
      <title>Liste over kameras</title>
      <% include partials/head %>
      <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
      <script src="/todo.js"></script>   
    </head>
    <body>
        <% include partials/menu %>
        <h1>Liste over <%= kameras.length %>  kamera og deres status</h1>
        <div id="todo-table">
                <div class="col-sm-4">
                <% for(var i=0; i < kameras.length; i++){ %>
                    <li><%= kameras[i].kameranavn %> </li>                        
                     <p>Plassering <b><%= kameras[i].lokasjon %> </b> og tilstand <%= kameras[i].aktiv %></p>
                    <% if(kameras[i].aktiv){ %>
                        <iframe width="320" height="240" src="http://192.168.0.101:8080/stream" frameborder="0" ></iframe>
                        <% }
                  } %>
                    
            </ul>
                </div>
        </div>
    </body>
</html>
